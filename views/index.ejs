<!-- views/index.ejs -->
<% include layout-head %>

<div class="container">

	<div class="jumbotron text-center" style="background-color:#e8ebee">
		<h1><!-- <span style="color:#585fe9; font-family: roboto;"> -->Menu Management Solution</span></h1>

		<!-- <h1><span class="fa fa-sign-in"></span> Login</h1> -->

		<!-- show any messages that come back with authentication -->
		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>

		<!-- LOGIN FORM -->
		<form action="/login" method="post">
			<div class="form-group" style="width: 300px; margin:0 auto;">
				<h5>Email</h5>
				<input type="text" class="form-control" name="email">
			</div>
			<div class="form-group" style="width: 300px; margin:0 auto;">
				<h5>Password</h5>
				<input type="password" class="form-control" name="password">
			</div>

			<button type="submit" class="btn btn-warning btn-lg">Login</button>
		</form>

		<!-- <a href="/login" class="btn btn-default" >Login</a> -->
		<!-- <a href="/signup" class="btn btn-default">Signup</a> -->
</div>

